include common/dropdown/dropdown.pug
include common/button/button.pug
include common/calendar/calendar.pug

mixin search(options)
  .search
    h1 Найдём номера под ваши пожелания
    .search__dropdowns
      .search__element
        .search__titles
          h3 прибытие
          h3 выезд
        +calendar({
          type: 'dates',
          placeholder: 'ДД.ММ.ГГГГ'
        })
      .search__element
        .search__title
          h3 гости
        +dropdown({
          type: 'guests',
          items: ['взрослые', 'дети', 'младенцы'],
          placeholder: 'Сколько гостей'
        })
    +button({
      text: 'подобрать номер',
      theme: 'arrow'
    })
