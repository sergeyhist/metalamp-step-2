include common/dropdown/dropdown.pug

mixin payment(options)
  .payment
    .payment__info
      .payment__wrapper
        .payment__number № #{options.number}
        .payment__type #{options.type}
      .payment__price #{options.cost}₽ в сутки
    .payment__element
      .payment__titles
        h3 прибытие
        h3 выезд
      +dropdown({
        type: 'dates',
        valueTo: '23.08.2019',
        valueFrom: '19.08.2019',
        placeholder: 'ДД.ММ.ГГГГ'
      })
    .payment__element
      .payment__titles
        h3 гости
      +dropdown({
        type: 'guests',
        items: [
          {name: 'взрослые', count: 2},
          {name: 'дети', count: 1},
          'младенцы'
        ]
      })
    .payment__element
      .payment__cost
      .payment__fee Сбор за услуги: скидка #{options.discount}₽ #{options.fee}₽
      .payment__fee Сбор за дополнительные услуги #{options.additionalFee}₽
    
