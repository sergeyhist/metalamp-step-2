include common/header/header.pug
include common/footer/footer.pug
include common/slideshow/slideshow.pug
include cards/search/search.pug

doctype html
html(land='ru')
  head
    meta(charset=UTF-8)
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Landing Page
  body
    .page
      .page__header
        +header
      .page__main
        .page__search
          +search
        .page__slideshow
          +slideshow({
            images: ['slide_1.png', 'slide_2.png']
          })
        .page__text
          p Лучшие номера для вашей работы,<br> отдыха и просто вдохновения
      .page__footer
        +footer
