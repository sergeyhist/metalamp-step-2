include common/header/header.pug
include common/footer/footer.pug
include common/slideshow/slideshow.pug
include cards/registration/registration.pug

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Room Details
  body.page
    header.page__header
      +header
    main.page__main
      .page__card
        +registration
      +slideshow({
        images: ['slide_3.png', 'slide_2.png']
      })
    footer.page__footer
      +footer
