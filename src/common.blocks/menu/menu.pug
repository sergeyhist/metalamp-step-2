mixin menu(items)
  nav(class='menu')
    - for (let item of items)
      -
        let hasArrow = item.arrow ? item.arrow : false
        let isFocus = item.focused === true ? ' menu__link_focused' : ''
      a(class='menu__link'+isFocus href=item.link) #{item.name}
        if hasArrow === true
          span(class='menu__arrow material-icons') expand_more
