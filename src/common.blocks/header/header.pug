mixin header(options)
  -
    let isLogged = options?.logged ? options.logged : false

  header(class='header')
    div(class='header__logo')
      +logo()
    +menu([
      {
        name: 'о нас',
        link: '#',
        focused: true
      },
      {
        name: 'услуги',
        link: '#',
        arrow: true
      },
      {
        name: 'вакансии',
        link: '#'
      },
      {
        name: 'новости',
        link: '#'
      },
      {
        name: 'соглашения',
        link: '#',
        arrow: true
      }
    ])
    if (isLogged === false)
      div(class='header__buttons')
        +button({
          text: 'войти',
          type: 'white'
        })
        +button({
          text: 'Зарегистрироваться'
          })
    else
      div(class='header__account')
        +account()
  