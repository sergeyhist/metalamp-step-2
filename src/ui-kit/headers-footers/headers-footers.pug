include common/icon/icon.pug
include common/header/header.pug
include common/footer/footer.pug

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title TOXIN Hotel
  body.page
    main.page__main
      .page__icon
        +icon()
      .page__content
        +header({
          focused: 0
        })
        +header({
          focused: 0,
          logged: true
        })
        +footer
        .page__footer_mobile
          +footer({
            mobile: true
          })
